<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Listar Bases de Datos</title>
</head>
<body>
    
    <h1>Bases de Datos Existentes</h1>
    <a href="/" class="botonLink">Volver al inicio</a>
    <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Nombre de la Base de Datos</th>
                        <th>Acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <% bases.forEach(base => { %>
                        <tr>
                            <td><%= base %></td>
                            <td>
                                <form action="/verTablas" method="GET">
                                    <input type="hidden" name="baseNombre" value="<%= base %>">
                                    <button type="submit">Ver Tablas</button>
                                </form>
                                <form action="/eliminarBase" method="POST" style="display:inline;">
                                    <input type="hidden" name="baseDatos" value="<%= base %>">
                                    
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    
    
</body>
</html>
